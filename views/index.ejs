<%- include('includes/header') %>

<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <div class="row">
        <div class="col-xl-6 col-md-12">
            <div class="card bg-success text-white mb-4" style="border: 2px solid black;">
                <div class="card-body text-center"> <!-- Center align card body -->
                    <h5>Total Number of Personnel</h5>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-center">
                    <span class="font-weight-bold display-1"><%= counts.personnelCount %></span>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-md-12">
            <div class="card bg-success text-white mb-4" style="border: 2px solid black;">
                <div class="card-body text-center"> <!-- Center align card body -->
                    <h5>Total Number of Departments</h5>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-center"> <!-- Center the footer content -->
                    <span class="font-weight-bold display-1"><%= counts.departmentCount %></span>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('includes/footer') %>
<%- include('includes/scripts') %>

